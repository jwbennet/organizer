<?xml version="1.0" encoding="UTF-8"?>
<persistence
    version="1.0"
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="organizer" transaction-type="RESOURCE_LOCAL">
    <!--<mapping-file>META-INF/orm.xml</mapping-file>-->
    <class>com.bbtech.organizer.server.entities.Sample</class>
    <class>com.bbtech.organizer.server.entities.Note</class>
    <class>com.bbtech.organizer.server.entities.Person</class>
    <class>com.bbtech.organizer.server.entities.Name</class>
    <class>com.bbtech.organizer.server.entities.Address</class>
    <class>com.bbtech.organizer.server.entities.Email</class>
    <class>com.bbtech.organizer.server.entities.PhoneNumber</class>
    <class>com.bbtech.organizer.server.entities.Log</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
    	<property name="jadira.usertype.autoRegisterUserTypes" value="true" />
    	<property name="jadira.usertype.databaseZone" value="jvm" />
    	<property name="jadira.usertype.javaZone" value="jvm" />
    </properties>
  </persistence-unit>
</persistence>
